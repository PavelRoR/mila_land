// Третий экран с отзывами
section.third
	.container
		.first_testim
			h3 #[span#client Клиент]: Нелли Кулакова, владелица 5-ти бизнесов (склады, тренинг центр, учебный центр и т.д.)
			.three_col
				.col_left
					figure
						img(src="img/problems.jpg" alt="Было")
						h4 Что было:
						figcaption
							+list_o('проблемы с дополнительным открытым павильоном – приносил убытки; ','бизнес приносящий основной весомый доход оказался на распутье - продавать или развивать?')
				.col_mid
					figure
						img(src="img/become.jpg" alt="Стало")
						h4 Что стало:
						figcaption
							+list_o('принят ответ во время сессии и сделан выбор, который откликнулся владелице – продавать бизнес;', 'а так же предложение для будущего: что делать далее и какие шаги осуществлять', 'Бизнес в процессе продажи', 'Легкость и радость по информации о будущем')
				.col_right
					figure
						img(src="img/done.jpg" alt="Сделано")
						h4 Что сделано:
						figcaption
							+list_o('Выставила бизнес на продажу и испытала облегчение, благодаря выбору и принятому проверенному решению', 'Бизнес успешно продан после прохождения сессий')
				.clf
			img(src="img/testimonial_1.jpg" alt="Отзыв")
		button#else Ещё отзывы
		.second_testim
			hr
			h3 #[span#client Клиент]: Ира, топ-менеджер крупной строительной компании столицы
			.three_col
				.col_left
					figure
						img(src="img/problems.jpg" alt="Было")
						h4 Что было:
						figcaption
							+list_o('в течение квартала учредители компании отказывали в сохранении должности «сотрудника подразделения»;')
				.col_mid
					figure
						img(src="img/become.jpg" alt="Стало")
						h4 Что стало:
						figcaption
							ul
								li найдены точки соприкосновения  с руководством компании и улажены межличностные затруднения,
								li осуществились два проекта: 
									ol
										li текущего месяца - ей предоставляют трудоёмкий отчет, который был в компетенции другого подразделения и свешивался на неё в течение месяца;
										li годовой давности - она получает квартиру от компании
							
				.col_right
					figure
						img(src="img/done.jpg" alt="Сделано")
						h4 Что сделано:
						figcaption
							+list_o('вопрос разрешён за 1 сессию')
				.clf
			img(src="img/testimonial_2.jpg" alt="Отзыв 2")
		button.submit.l_box записаться
// Конец Третьего экрана