body 
    font-family 'RobotoLight', san-serif
    line-height 1
	-webkit-text-size-adjust none
    font-size 18px
    

*
*before
*after 
    box-sizing border-box
    margin 0
    padding 0


*before
*after 
    content ''

hgroup
h3
h4 
    font-family 'SegoeBlack', san-serif
    text-align center
    color #852222
     
.container
    max-width 960px
    min-width 280px
    margin 10px auto
    

.clf
    clear both

li
    list-style none

.second
.third
.fourth
    margin 40px 0
    padding 20px 0

.button
    display block
    margin 30px auto 20px
// Стили Main
.header
    background-color rgba(#000, .5)
    color #fff
    .container
        margin 0 auto
        padding 10px 0
        img
            float left
            max-height 59px
            max-width 195px
            margin 3px 0
        ul
            float right
            li
                text-align right
                padding 3px 0
.main
    background-image url('http://www.storania.com/wp-content/uploads/2015/09/business-plan.jpg')
    background-position top center
    background-attachment fixed
    background-size cover
    background-repeat no-repeat
    padding-bottom 30px
.bold 
    font-weight bold
    border-bottom 1px dashed
    
.main_container
    max-width 960px
    min-width 280px
    margin 30px auto 0
    border 1px solid #fff
    background-color rgba(255,255,255,.97)
    padding 10px

h1
    font-size 30px
    padding 10px

h2
    font-size 24px
    margin 10px 10px 20px
    color #A02929

.flex
    display flex
    align-items center
    justify-content center

.left_all
    width 50%
    float left
    padding 10px

.right_all 
    width 50%
    float right
    padding 10px

.left
    @extend .left_all
    @extend .flex
    flex-direction column
    height 375px
    width 60%
    
.for_main ul
    padding-left 30px
    
.for_main li
    margin 15px
    font-size 20px
    line-height 2
    position relative
    padding-left 45px
    &:before
        content '☑'
        position absolute
        top 4px
        left 0
        background-color brown
        width 30px
        height 30px
        text-align center
        vertical-align middle
        border 1px solid #fff
        box-shadow 0 0 0 3px brown
        color #F5C800
        line-height 1.5

.antispam
    font-size 10px
    text-align center
    color #A30000
    font-weight bold

.right
    @extend .right_all
    width 40%

.right_container
    border 10px dashed rgb(187,153,0)
    background-color rgba(245,200,0,1)
    padding 10px
    box-shadow 0 0 5px rgb(187,153,0)

h3
    font-size 22px
    margin 10px 0

h4
    font-size 18px
    margin 10px 10px 20px

form
    max-width 80%
    margin 10px auto
    @extend .flex
    flex-direction column
    input
        flex-direction column
        width 100%
        margin 10px
        height 35px
        border-style solid
        border-color transparent
        border-bottom 2px solid brown
        background-color transparent
        color #fff
        font-size 18px
        font-style italic
.submit
    background-color #EA0C00
    font-style normal
    text-transform uppercase
    position relative
    display block
    margin 10px auto
    width 248px
    font-size 16px
    height 40px
    border 2px solid #fff
    overflow hidden
    padding-left 28px
    color #fff
    text-shadow 1px 1px 1px rgba(0,0,0,.5)
    z-index 1
    cursor pointer
    &:after
        content '☯'
        position absolute
        color #fff
        left 0px
        padding 2px 0
        background #B80900
        width 30px
        top 0
        height inherit
        font-size 22px
        text-shadow 1px 1px 1px darkred
    &:before
        content ''
        position absolute
        background #B80900
        width inherit
        height inherit
        top 0px
        left -250px
        z-index -1
        transition all .4s ease-in-out
    &:hover
        color #fff
        box-shadow 0 0 0 3px #b80900
        &:before
            left 0
            transition all .4s ease-in-out
    &:click
        color #fff
        &:before
            left 0
            transition all .4s ease-in-out
            
            

// Стили Second
.second
    padding-bottom 0
    
.second_left
    @extend .left_all
    position relative
    li
        padding-left 40px
        margin 10px 0
        line-height 2
        position relative
        &:before
            position absolute
            content '？'
            left 0
            top 3px
            background-color #FF4040
            color #fff
            width 25px
            height 25px
            text-align center
            border 1px dashed #fff
            box-shadow 0 0 0 3px #FF4040
            font-weight bold
            font-size 21px
            line-height 1.3
            text-shadow 1px 1px 1px rgba(0,0,0,.5)
    &:before
        content '↝'
        position absolute
        bottom -84px
        right -150px
        color rgba(245,200,0,0.2)
        font-size 360px
.second_right
    @extend .right_all
    position relative
    li
        @extend .second_left li
        &:before
            position absolute
            content '☯'
            background-color #30C030
            box-shadow 0 0 0 3px #30C030
            

.second .submit
.third .submit
    box-shadow 0 0 0 3px #ea0c00
    margin-top 25px
    
.second .submit:after
.third .submit:after
    content '✔'

.second .submit:hover
.third .submit:hover
    box-shadow 0 0 0 3px #b80900
// Стили Third
.third
    background-color rgba(main_color .35)
#client
    border-bottom 1px dashed
.three_col
    display flex
    justify-content center
    align-items start
    margin-bottom 40px

.col_left
.col_mid
.col_right
    width 33%
    padding 10px
    margin 0 10px
 
.col_left ul
    counter-reset my-counter-1
    
.col_mid ul  
    counter-reset my-counter-2
    
.col_left
.col_mid
.col_right
    
    &:before
        display none
    
.col_left
    li
        @extend .second_left li
        counter-increment my-counter-1
        &:before
            content counter(my-counter-1)
            position absolute
            left 0
            background-color #58745d
            box-shadow 0 0 0 3px #58745d
            
.col_mid
    li
        counter-increment my-counter-2
        @extend .second_left li
        &:before
            content counter(my-counter-2)
            background-color #005373
            box-shadow 0 0 0 3px #005373
            
.col_right
    li
        @extend .second_left li
        &:before
            content '✔'
            background-color #4abcd4
            box-shadow 0 0 0 3px #4abcd4


.col_left
.col_mid
.col_right
    figure
        display inline-block
        background-color #F2F2F2
        padding-bottom 20px
        min-height 715px
        img
            max-width inherit
            max-height 100%
            border-radius unset
    figcaption
        flex-grow unset
        padding 0 20px
.col_left
    h4
        color #58745D
.col_mid
    h4
        color #005373
.col_right
    h4
        color #4ABCD4
   
// Стили Fourth

.fourth figure
    @extend .flex
    flex-direction row
    font-size: 22px;
    line-height: 2;
    img
        max-width 200px
        max-height 200px
        flex-direction column
        flex-grow 1
        border-radius 50%
    figcaption
        flex-grow 2
        padding 0 20px
#mila
    border-bottom 2px dashed
    font-weight bold
#exp
    font-weight: bold
    
        
// Стили Footer
footer
    text-align center
    background-color rgba(#000 .45)
    color #fff
    padding 10px 0
    .container
        margin 0 auto
        a
            &:after
                content '﹥'
.layout
    position fixed
    background-color rgba(#fff, .95)
    top 0
    left 0
    width 100%
    height 100%
    display none
    z-index 9999
    cursor pointer

.box
    @extend .right_container
    width 350px
    margin 0 auto
    position relative
    top 50px

#close
    position: absolute;
    top: -20px;
    right: -20px;
    color: #999;
    border: 2px dotted #F2F2F2;
    border-radius: 50px;
    width: auto;
    height: auto;
    background-color #F2F2F2
    cursor pointer
    text-align center
    padding 5px