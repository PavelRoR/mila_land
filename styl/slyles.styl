form
    max-width 80%
    margin 10px auto
    @extend .flex
    flex-direction column
    input
        flex-direction column
        width 100%
        margin 10px
        height 35px
        border-style solid
        border-color transparent
        border-bottom 2px solid brown
        background-color transparent
        color #fff
        font-size 18px
        font-style italic
.submit
    background-color #EA0C00
    font-style normal
    text-transform uppercase
    position relative
    display block
    margin 10px auto
    width 100%
    font-size 16px
    height 40px
    border 2px solid #fff
    overflow hidden
    padding-left 28px
    color #fff
    text-shadow 1px 1px 1px rgba(0,0,0,.5)
    z-index 1
    cursor pointer
    &:after
        content '☯'
        position absolute
        color #fff
        left 0px
        padding 2px 0
        background #B80900
        width 30px
        top 0
        height inherit
        font-size 22px
        text-shadow 1px 1px 1px darkred
    &:before
        content ''
        position absolute
        background #B80900
        width 100%
        height inherit
        top 0px
        left -275px
        z-index -1
        transition all .4s ease-in-out
    &:hover
        color #fff
        box-shadow 0 0 0 3px #b80900
        &:before
            left 0
            transition all .4s ease-in-out

.submit.l_box
    width 30%
            

